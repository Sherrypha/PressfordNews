@model PressfordNewsSite.Models.Article

@{
    ViewBag.Title = "Details";
}


<div>
    
    <div class="panel panel-default">
            <div class="panel-heading">
                <h3>@Html.DisplayFor(model => model.Title)</h3>
            </div>
            <div class="panel-body">
                <p>@Html.DisplayFor(model => model.Body)</p>

            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-4">Published By: @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName) </div><div class="col-md-4">Date Published:@Html.DisplayFor(model => model.DatePublished) </div>
                    <div class="col-md-4"><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> @Html.Encode(ViewData["Likes"] ) </div>
                </div>
            </div>
        </div>
  </div>
